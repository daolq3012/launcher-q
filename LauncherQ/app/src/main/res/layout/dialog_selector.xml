<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="328dp"
              xmlns:tools="http://schemas.android.com/tools"
              android:paddingLeft="10dp"
              android:orientation="vertical"
              android:paddingRight="10dp"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvTitle"
            android:layout_margin="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/c1"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            tools:text="지금까지 공들여 만든 퀴즈 내용을
정말로 삭제하시겠습니까?"
    />

    <LinearLayout
            android:id="@+id/llLine1"
            android:orientation="vertical"
            android:background="@color/c2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <TextView
            android:layout_margin="17dp"
            android:id="@+id/tvSelector1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1a273d"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            tools:text="selector1"
    />


    <LinearLayout
            android:visibility="gone"
            android:id="@+id/llLine2"
            android:orientation="vertical"
            android:background="@color/c2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <TextView
            android:visibility="gone"
            android:layout_margin="17dp"
            android:id="@+id/tvSelector2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1a273d"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            tools:text="selector1"
    />

    <LinearLayout
            android:id="@+id/llLine3"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@color/c2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <TextView
            android:layout_margin="17dp"
            android:visibility="gone"
            android:id="@+id/tvSelector3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1a273d"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            tools:text="selector1"
    />




</LinearLayout>