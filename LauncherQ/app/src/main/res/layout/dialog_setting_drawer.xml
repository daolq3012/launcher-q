<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:minWidth="250dp" android:gravity="center"
        android:orientation="vertical">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="20dp"
              android:text="앱 배치 ( 세로 * 가로 )" android:textSize="15dp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"   android:gravity="center" >


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvNumY"
                  tools:text="4" android:textSize="50dp" android:textColor="@color/black"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp" />

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_close_white" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvNumX"
                  tools:text="5" android:textSize="50dp" android:textColor="@color/black"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp" />

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp"
              android:text="비공개 앱 관리" android:id="@+id/tvHide" android:textSize="15dp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"   android:gravity="right" >

        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp"
                android:text="확인" android:id="@+id/tvOk" android:textColor="@color/black" android:textSize="12dp" />

        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp"
                android:text="취소" android:id="@+id/tvCancel" android:textColor="@color/black" android:textSize="12dp" />

    </LinearLayout>










    </LinearLayout>