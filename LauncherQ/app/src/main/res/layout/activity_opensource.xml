<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
                name="vm"
                type="seoft.co.kr.launcherq.ui.opensource.OpensourceViewModel" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.opensource.OpensourceActivity">


        <android.support.design.widget.AppBarLayout
                app:elevation="0dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:title="오픈소스 라이센스"
                    app:titleTextColor="@color/myDeepGray"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/myLightGray"
                    android:theme="?attr/actionBarTheme" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" >


            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="4dp"
                    android:id="@+id/rvOpensources"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</layout>
