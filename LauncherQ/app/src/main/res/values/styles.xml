<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="MainContent" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="MainTwoStepLinearLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/two_step_item_height</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="MainTwoStepTextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MainTwoStepLine" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c1c1c1</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>


    <style name="MainOneStepOpener" >
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
    </style>


    <style name="ExpertStatusDialogLinearLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ExpertStatusDialogTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/gray_for_font</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="ExpertStatusDialogTextViewAdd" parent="ExpertStatusDialogTextView">
        <item name="android:text">   추가   </item>
    </style>

    <style name="ExpertStatusDialogTextViewEdit" parent="ExpertStatusDialogTextView">
        <item name="android:text">   수정      </item>
    </style>

    <style name="ExpertStatusDialogTextViewDelete" parent="ExpertStatusDialogTextView">
        <item name="android:text">      삭제   </item>
    </style>

    <style name="SettingDrawerDialogAppBoxOutter">
        <item name="android:layout_width">@dimen/grid_size_in_app_setting_view</item>
        <item name="android:layout_height">@dimen/grid_size_in_app_setting_view</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#123123</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="SettingDrawerDialogAppBoxInner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingDrawerDialogAppBoxGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingDrawerDialogAppBoxTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">EMPTY</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="HorizontalGrayLineWithLeftRightMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_for_line</item>
        <item name="android:layout_marginLeft">@dimen/hori_line_le_ri_margin</item>
        <item name="android:layout_marginRight">@dimen/hori_line_le_ri_margin</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="HorizontalGrayLineWithAllMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_for_line</item>
        <item name="android:layout_margin">@dimen/hori_line_le_ri_margin</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="HorizontalGrayLineWithoutMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_for_line</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DialogBottomRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogBottomMidLineView">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/gray_for_line</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <style name="DialogBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ExpertSettingTitleTextview" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="ExpertSettingContentView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/gray_for_font</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>







</resources>
