<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="seoft.co.kr.launcherq">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <permission android:name="seoft.co.kr.launcherq.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="seoft.co.kr.launcherq.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
            android:name=".utill.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.main.MainActivity"
                  android:theme="@style/AppThemeNoActionBar"
                  android:launchMode="singleTask"
                  android:clearTaskOnLaunch="true"
                  android:resumeWhilePausing="true"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.splash.SplashActivity"/>
        <activity android:name=".ui.setting.BgScreenSettingActivity"/>
        <activity android:name=".ui.setting.LauncherSettingActivity"/>
        <activity
                android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                android:theme="@style/AppTheme"/>
        <activity android:name=".ui.setting.BgWidgetSettingActivity"/>

        <receiver
                android:name=".ui.main.MainActivity$TimeReceiver"
                android:enabled="true"
                android:exported="false"/>

        <activity
                android:name=".ui.drawer.DrawerActivity"
                android:windowSoftInputMode="stateHidden|stateVisible|adjustPan"
                />

        <activity android:name=".ui.arrange.ArrangeActivity" />
        <activity android:name=".ui.select.SelectActivity" />
        <activity android:name=".ui.arrange.ExpertSettingActivity"
                  android:launchMode="singleTask"
                  android:windowSoftInputMode="adjustResize" />

        <!--<receiver android:name=".utill.ShutdownConfigAdminReceiver"-->
                  <!--android:label="@string/sample_device_admin"-->
                  <!--android:description="@string/sample_device_admin_description"-->
                  <!--android:permission="android.permission.BIND_DEVICE_ADMIN">-->
            <!--<meta-data android:name="android.app.device_admin"-->
                       <!--android:resource="@xml/device_turn_off" />-->
            <!--<intent-filter>-->
                <!--<action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <receiver android:name=".utill.PackageReceiver">
            <intent-filter android:priority="999" >
                <!--<action android:name="android.intent.action.PACKAGE_INSTALL" />-->
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <provider android:name=".utill.CommandContentProvider"
                  android:authorities="seoft.co.kr.launcherq.utill.CommandContentProvider"
                  android:enabled="true"
                  android:exported="true"
                  android:readPermission="seoft.co.kr.launcherq.READ_DATABASE"
                  android:writePermission="seoft.co.kr.launcherq.WRITE_DATABASE" />

    </application>

</manifest>