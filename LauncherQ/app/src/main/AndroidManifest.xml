<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="seoft.co.kr.launcherq">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".utill.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppThemeNoActionBar"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.splash.SplashActivity"/>
        <activity android:name=".ui.setting.BgScreenSettingActivity"/>
        <activity android:name=".ui.setting.LauncherSettingActivity"/>
        <activity
                android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                android:theme="@style/AppTheme"/>
        <activity android:name=".ui.setting.BgWidgetSettingActivity"/>

        <receiver
                android:name=".ui.main.MainActivity$TimeReceiver"
                android:enabled="true"
                android:exported="false"/>

        <activity
                android:name=".ui.drawer.DrawerActivity"
                android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.arrange.ArrangeActivity">
        </activity>
        <activity android:name=".ui.select.SelectActivity">
        </activity>
        <activity android:name=".ui.arrange.ExpertSettingActivity"
                  android:windowSoftInputMode="adjustResize" >
        </activity>
    </application>

</manifest>